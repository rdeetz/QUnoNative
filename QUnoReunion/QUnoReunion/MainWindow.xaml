<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Mooville.QUno.Reunion"
    mc:Ignorable="d"
    x:Class="Mooville.QUno.Reunion.MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <CommandBar OverflowButtonVisibility="Collapsed" DefaultLabelPosition="Right" Grid.Row="0" Grid.Column="0">
            <AppBarButton x:Name="buttonSettings" Label="Settings" AccessKey="T" Click="ButtonSettings_Click">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE115;"/>
                </AppBarButton.Icon>
            </AppBarButton>
        </CommandBar>
        <Grid Grid.Row="1" Grid.Column="0">
            <GridView/>
        </Grid>
    </Grid>
</Window>
